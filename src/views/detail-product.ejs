    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const brands = [
          "Apple",
          "Redmi",
          "Samsung",
          "Google",
          "OnePlus",
          "Motorola",
          "Nothing",
          "Honor",
          "Realme",
          "Vivo",
          "Sony",
          "Oppo",
        ];
        const checkboxes = document.querySelectorAll(
          '#brand input[type="checkbox"]'
        );

        checkboxes.forEach((checkbox) => {
          if (brands.includes(checkbox.value)) {
            checkbox.checked = false;
          }
        });

        checkboxes.forEach((checkbox) => {
          checkbox.addEventListener("change", filterProducts);
        });

        function filterProducts() {
          const selectedBrands = Array.from(
            document.querySelectorAll('#brand input[type="checkbox"]:checked')
          ).map((cb) => cb.value);
          document.querySelectorAll("#products .card").forEach((card) => {
            const cardBrand = card.getAttribute("data-brand");
            const price = parseFloat(card.getAttribute("data-price"));
            const minPrice = parseFloat(document.getElementById("min-price").value);
            const maxPrice = parseFloat(document.getElementById("max-price").value);
            if (
              (selectedBrands.length === 0 || selectedBrands.includes(cardBrand)) &&
              price >= minPrice &&
              price <= maxPrice
            ) {
              card.style.display = "block";
            } else {
              card.style.display = "none";
            }
          });
        }

        function percentagePrice(price, discountPercentage) {
    const discountAmount = (price * discountPercentage) / 100;
    const discountPrice = price - discountAmount;
    return { discountPrice, discountAmount };
}

function formatWithCommas(number) {
    // Ensure number is a number and format it with commas
    return number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
}

function updateDiscountedPrices() {
    const productElements = document.querySelectorAll(".card");
    productElements.forEach((element) => {
        // Retrieve price and discount percentage from data attributes
        const price = parseFloat(element.dataset.price);
        const discountPercentage = parseFloat(element.dataset.discountpercentage);

        // Check if values are valid numbers
        if (!isNaN(price) && !isNaN(discountPercentage)) {
            const { discountPrice, discountAmount } = percentagePrice(price, discountPercentage);

            // Format prices and update the inner text
            element.querySelector(".discounted-price").innerText = "₹" + formatWithCommas(discountPrice.toFixed(0));
            element.querySelector(".discount-amount").innerText = "₹" + formatWithCommas(discountAmount.toFixed(0));
            element.querySelector(".original-price").innerText = "₹" + formatWithCommas(price.toFixed(0));
        }
    });
}

// Call the function to update prices
updateDiscountedPrices();


        document
          .getElementById("price-filter")
          .addEventListener("submit", function (event) {
            event.preventDefault();
            filterProducts();
          });

        updateDiscountedPrices();
      });
    </script>
    <script>
      function toggleContent() {
        var moreContent = document.querySelector(".more-content");
        var showMoreButton = document.querySelector(".show-more-button");
        var showLessButton = document.querySelector(".show-less-button");

        if (moreContent.style.display === "none") {
          moreContent.style.display = "block";
          showMoreButton.style.display = "none";
          showLessButton.style.display = "inline";
        } else {
          moreContent.style.display = "none";
          showMoreButton.style.display = "inline";
          showLessButton.style.display = "none";
        }
      }
    </script>