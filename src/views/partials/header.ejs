<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title  %></title>
    <link rel="icon" href="https://img.icons8.com/nolan/30/shopee.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/home.css">
  </head>
  <body>
    <div class="sticky-top">
    <nav class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid">
          <input type="checkbox" id="darkModeToggle" >
          <a class="navbar-brand col-2 ms-5" href="/home"><img width="70px" height="50px" src="/public/Preview.png" alt=""></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                <form class="d-flex" role="search">
                    <input class="form-control ms-5 " type="search" placeholder="Search" aria-label="Search" id="search" aria-describedby="btnGroupAddon">
                    <div class="input-group-text" type="button" id="btnGroupAddon"><img width="20" height="20" style="cursor: pointer;" src="https://img.icons8.com/ios-filled/20/search--v1.png" alt="search--v1"/></div>
                  </form>
              </li>
            </ul>
            <ul class="nav justify-content-end">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <% if (Name) { %>
                        <%= Name %>
                      <% } else { %>
                        ACCOUNT
                      <% } %>
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/user-profile">Profile</a></li>
                      <li><a class="dropdown-item" href="#">Another action</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <form method="post" action="/logout">
                        <% if (Name) { %>
                          <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        <% } else { %>
                          <li><a class="dropdown-item" href="/login">Login</a></li>
                        <% } %>
                      </form>
                    </ul>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/wishlist">wishlist</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/cart"><img width="30" height="30" src="https://img.icons8.com/ios-filled/50/shopping-cart.png" alt="shopping-cart"/></a>
                </li>
              </ul>
          </div>
        </div>
      </nav>
      </div>        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      const darkModeToggle = document.getElementById('darkModeToggle');
     darkModeToggle.addEventListener('change', () => {
    if (darkModeToggle.checked) {
        // Enable dark mode
        document.body.classList.add('dark-mode');
    } else {
        // Disable dark mode
        document.body.classList.remove('dark-mode');
    }
});
    </script>
  </body>
</html>